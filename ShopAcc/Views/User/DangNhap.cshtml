@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/Userlogin/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Userlogin/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Userlogin/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Userlogin/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Userlogin/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Userlogin/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Userlogin/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Userlogin/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/Userlogin/images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)

                    <div class="login100-form validate-form">
                        <h2 class="text-center"style="font-weight:600;margin-bottom:30px; color:black;">Đăng nhập</h2>
                        <h4 class="text-center" style="font-weight:600;margin-bottom:30px; color:orange;">@ViewBag.ThongBao</h4>
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            <input class="input100" type="text" name="tendn" placeholder="Tên đăng nhập">
                            @ViewData["Loi1"]
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            <input class="input100" type="password" name="matkhau" placeholder="Mật khẩu">
                            @ViewData["Loi2"]
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="container-login100-form-btn">
                            <button type="submit" class="login100-form-btn">
                                Đăng nhập
                            </button>
                        </div>

                       

                        <div class="text-center p-t-136">
                            <a class="txt2">
                                <i>@Html.ActionLink("Tạo tài khoản", "DangKy", "User")</i>
                            </a>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Content/Userlogin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Userlogin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Userlogin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Userlogin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Userlogin/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Content/Userlogin/js/main.js"></script>

</body>
</html>


